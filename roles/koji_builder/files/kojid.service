[Unit]
Description=Koji build server
Documentation=https://docs.pagure.org/koji/server_howto/

After=network.target

[Service]
TasksMax=infinity
ExecStart=/usr/sbin/kojid \
       --fg \
       --force-lock \
       --verbose
ExecReload=/bin/kill -USR1 $MAINPID
Restart=on-failure
RestartSec=60s

[Install]
WantedBy=multi-user.target
