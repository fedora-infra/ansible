0 3,15,18,21 * * * root touch /tmp/fedora-compose-eln && TMPDIR=`mktemp -d /tmp/eln.XXXXXX` && chmod 755 $TMPDIR && cd $TMPDIR && git clone https://pagure.io/pungi-fedora.git && cd pungi-fedora && git checkout eln && /usr/local/bin/lock-wrapper eln-compose "LANG=en_US.UTF-8 ./eln-nightly.sh" && sudo -u ftpsync /usr/local/bin/update-fullfiletimelist -l /pub/fedora/update-fullfiletimelist.lock -t /pub eln && rm /tmp/fedora-compose-eln
